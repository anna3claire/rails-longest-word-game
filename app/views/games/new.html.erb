<h1>New Game</h1>


    <% @letters.each do |letter| %>
  <div class = letter_list><%= letter.capitalize %></div>
<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token,form_authenticity_token %>
  <div class="form-group">
      <label for = "input"> What is the longest word you can find?</label>
      <div class="form-inline">
      <input type="text" class="form-control" name = "input"placeholder="Type Here">
      <%= hidden_field_tag 'grid', @letters %>
    <button type="button" class="btn btn-info">Play!</button>
    </div>
  </div>
</form>


